# FörderScout AI - Production Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_ENV=production
DEBUG=false
APP_NAME=FörderScout AI
APP_VERSION=1.0.0

# =============================================================================
# Database - PostgreSQL
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=foerderscout
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=foerderscout

# =============================================================================
# Cache & Queue - Redis
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# =============================================================================
# Vector Database - Qdrant
# =============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# =============================================================================
# AI Services - OpenAI
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# Authentication - JWT
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Payments - Stripe
# =============================================================================
STRIPE_API_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# Monitoring - Sentry
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# Monitoring - Grafana
# =============================================================================
GRAFANA_PASSWORD=your-secure-grafana-password

# =============================================================================
# Backups - AWS S3 (optional)
# =============================================================================
S3_BUCKET=foerderscout-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1

# =============================================================================
# Email (optional)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@foerderscout.de
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@foerderscout.de

# =============================================================================
# Domain Configuration
# =============================================================================
DOMAIN=foerderscout.de
API_URL=https://api.foerderscout.de
FRONTEND_URL=https://foerderscout.de

# =============================================================================
# CORS
# =============================================================================
ALLOWED_ORIGINS=["https://foerderscout.de","https://www.foerderscout.de"]
